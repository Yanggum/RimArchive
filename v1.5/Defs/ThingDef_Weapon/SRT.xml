			<AccuracyMedium>1</AccuracyMedium>
			<AccuracyLong>1</AccuracyLong>
			<WorkToMake>14000</WorkToMake>
		</statBases>
		<costList>
			<Steel>250</Steel>
			<ComponentIndustrial>12</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>RimArchive.Verb_Bombardment</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<warmupTime>10</warmupTime>
				<range>90</range>
				<ai_AvoidFriendlyFireRadius>23</ai_AvoidFriendlyFireRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<burstShotCount>1</burstShotCount>
				<soundCast>OrbitalTargeter_Fire</soundCast>
				<onlyManualCast>true</onlyManualCast>
				<targetParams>
				  <canTargetLocations>true</canTargetLocations>
				</targetParams>
				<aimingLineMote>Mote_HellsphereCannon_Aim</aimingLineMote>
				<aimingChargeMote>Mote_HellsphereCannon_Charge</aimingChargeMote>
				<aimingTargetMote>Mote_HellsphereCannon_Target</aimingTargetMote>
				<beamTargetsGround>true</beamTargetsGround>
				<soundAiming>HellsphereCannon_Aiming</soundAiming>
			</li>
		</verbs>
		<modExtensions>
			<li Class="RimArchive.Textures">
				<projectiletexpath>
